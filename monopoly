#include <stdio.h>
#include <stdlib.h>
#include "maBiblio.h"

/// structure d'un joueur
typedef struct Joueur {
    char pion[20];
    int positionX;
    int positionY;
    int argentJoueur;
    //Proprietes *prop;
}Joueur;

/// structure Propriété
typedef struct Proprietes{
    int nbMaisons;
    int nbHotel;//par propriete et nom
    char name;
    int prix;
}Proprietes;

void menu()
{
    int choix;

    printf("***** MENU *****\n");
    printf("Souhaitez-vous lancer une partie de Monopoly ?\n");
    printf("Taper 1 pour lancer une partie\n");
    printf("Taper 2 pour sauvegarder votre partie \n");
    printf("Taper 3 pour charger une ancienne partie\n");
    printf("Taper 4 pour afficher les regles\n");
    printf("Taper 5 pour afficher le nom des membres de l'equipe du projet\n");
    do
    {
        scanf("%d", &choix);
        fflush(stdin);
    }
    while(choix<1  ||choix>5);
    switch(choix)
        {
            case 1:
            {
                printf("La partie va commencer!\n");
                nbJoueurs();
                ///plateau(); => affichage des joueurs sur le plateau de départ
                /// argent();
                /// dé => déplacement joueur + gestion achat propriété
                break;
            }
            case 2 :
            {
                break;
            }
            case 3:
            {
                break;
            }
            case 4:
            {
                printf("LES REGLES DU MONOPOLY\n");
                break;

            }
            case 5:
            {
                printf("Paul PHILIPPON\nJulien LIN\nMathis CHATILLON\nRomain THEPAUT\n");
                break;
            }

        }
}

void nbJoueurs ()
{
                int nbJoueur, i;

                do {
                printf("Veuillez saisir le nombre de joueurs\n");
                fflush(stdin);
                scanf("%d", &nbJoueur);

                }while (nbJoueur<2  ||nbJoueur>6);

                /// création tableau de structure Joueur
                Joueur tabJoueur[nbJoueur];
                for (i=0; i<nbJoueur; i++)
                {
                    ///nom du joueur
                    printf("Saisissez votre pion :\n");
                    scanf("%s",tabJoueur[i].pion);

                    ///position de départ du joueur
                    tabJoueur[i].positionX =  87;
                    tabJoueur[i].positionY = 24;

                }

}
